      char But[] = "son obsession aveugle pour l'éradication des titans.";
      char Perso[] = "d'un combattant";

printf("\nEn %s journée du %d %s %d, nous allâmes vous raconter l'histoire %s surnommé %sà cause de %s \n", Adjour, Nbj, Nmm, Nba, Perso , SNomP, But); 

      char EtatP[] = "enfant";
      char Event[] = "n'ayant absolument rien changé à sa vie";
      char Perip1[] = "Il a observé sa mère se faire dévorer vivante par un titan, alors que son père était porté disparu depuis peu";
      char Perip2[] = "Il a go muscu + drague de rue";

printf("\nTout a commencé lorsqu'il était %s, et qu'il ait assisté à des événements %s : \n\n   - %s \n   - %s", EtatP, Event, Perip1, Perip2);

printf("\n\n test");

int my_rand (void);

            
            static int first = 0;
            
            if (first == 0)
            {
                srand (time (NULL));
                first = 1;
            }

   int i;

 printf("   Nombres pseudoaléatoires : \n \n ");
   for (i = 0; i<10; i++)
   {
     printf ("%d ", my_rand());
   }
   return (EXIT_SUCCESS);
}

int my_rand (void)
{
   return (rand ());
